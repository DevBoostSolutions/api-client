{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "sourceMap": true,
        "baseUrl": "./",
        "resolveJsonModule": true,
        "declaration": true,
        "lib": ["es2015", "dom"],
    },
    "exclude": ["node_modules"]
}